<h1>All Products</h1>

<button><%= link_to "Home", home_url %></button>
<button><%= link_to "Sell New Product", new_product_url %></button>

<%= form_tag products_path, method: :get, authentication: false, id: 'search-form' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
<% end %>

<p><% @products.each do |p| %></p>
<p><%= link_to "#{p.name}",  p %></p>
<p>$<%= p.formatted_price %> - <span><%= (p.description).capitalize + '.' %></span> </p>
<br>
<% end %>