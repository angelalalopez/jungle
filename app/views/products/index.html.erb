<h1>All Products</h1>

<button><%= link_to "Home", home_url %></button>
<button><%= link_to "Browse", products_url %></button>
<button><%= link_to "New Product", new_product_url %></button>

<h4><%= page_entries_info @products %></h4>

<%= form_tag products_path, method: :get, authentication: false, id: 'search-form' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
<% end %>

<div id="products">
  <%= render @products %>
</div>

<%= paginate @products %>

